                                        mdCmbXAxis.AgIdItem = "id";
                                        mdCmbXAxis.AgTextItem = "name";
                                        mdCmbXAxis.RootTagId = "AxisXItems";
                                        mdCmbYAxis.OnSelectFunct = "angCtrl.setAxisXItem()";
                                        mdCmbXAxis.LabelLeft = RequestResource.AxisX;
