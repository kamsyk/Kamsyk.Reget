                                        <input id="btnRemoveAll"
                                               type="button"
                                               class="btn btn-primary reget-btn-minus"
                                               style="margin-right:15px;margin-bottom:10px;"
                                               value="@RequestResource.RemoveAll"
                                               ng-click="angCtrl.filterRemoveAll()" />
                                    </div>
                                </div>
